<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/behind_img"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/behind_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/behind_img"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/behind_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/behind_title"
        android:layout_below="@+id/behind_title"
        android:layout_marginTop="15dp"
        android:drawableLeft="@mipmap/black_share_icon"
        android:text="11"
        android:textColor="@color/colorGray9" />

    <TextView
        android:id="@+id/behind_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/behind_share"
        android:layout_below="@+id/behind_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/behind_share"
        android:drawableLeft="@mipmap/home_like"
        android:text="22"
        android:textColor="@color/colorGray9" />

</RelativeLayout>